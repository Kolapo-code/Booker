{
    "swagger": "2.0",
    "info": {
        "description": "This is a REST-Full API called Booker, it provides booking services and the ablity to own workspaces and make appointments.",
        "version": "0.0.0",
        "title": "BOOKER API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "bookerapiteam@gmail.com"
        },
        "license": {
            "name": "",
            "url": ""
        }
    },
    "host": "",
    "basePath": "/api",
    "tags": [
        {
            "name": "Account",
            "description": "Create, activate and manage account"
        },
        {
            "name": "Session",
            "description": "login and logout"
        },
        {
            "name": "Profile",
            "description": "Interact with users profile, manage your own profile"
        },
        {
            "name": "Appointment",
            "description": "Manage appointments"
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/sign_up": {
            "post": {
                "tags": [
                    "Account"
                ],
                "summary": "create account",
                "description": "the end point that registers a user",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "",
                        "required": true,
                        "properties": {
                            "first_name": {
                                "type": "string"
                            },
                            "last_name": {
                                "type": "string"
                            },
                            "email": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            },
                            "birth_date": {
                                "type": "string",
                                "format": "%Y-%m-%d"
                            },
                            "location": {
                                "type": "string"
                            },
                            "picture": {
                                "type": "string"
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "user_id": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/validation/<token>": {
            "put": {
                "tags": [
                    "Account"
                ],
                "summary": "validate account",
                "description": "the end point that verify a user by the his token",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/reset_password": {
            "post": {
                "tags": [
                    "Account"
                ],
                "summary": "forget password",
                "description": "the end point that send a temprary",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "Session"
                ],
                "summary": "create session",
                "description": "the end point that creates session for a user",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "",
                        "required": true,
                        "properties": {
                            "email": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                },
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "email": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/logout": {
            "delete": {
                "tags": [
                    "Session"
                ],
                "summary": "delete session",
                "description": "the end point that logs out the user",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/account": {
            "delete": {
                "tags": [
                    "Account"
                ],
                "summary": "delete account",
                "description": "the end point that removes user account",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/account/upgrade": {
            "post": {
                "tags": [
                    "Account"
                ],
                "summary": "upgrade account",
                "description": "the end point that upgrades user to premium account",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "",
                        "required": true,
                        "properties": {
                            "field": {
                                "type": "string"
                            },
                            "location": {
                                "type": "string"
                            },
                            "biography": {
                                "type": "string"
                            },
                            "subscription_plan": {
                                "type": "string"
                            },
                            "auto_renewal": {
                                "type": "string"
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/profile": {
            "get": {
                "tags": [
                    "Profile"
                ],
                "summary": "get user data",
                "description": "the end point that gets user profile",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "data": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
